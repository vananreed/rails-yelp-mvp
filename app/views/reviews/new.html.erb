<h1>Write a Review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Add Review", class: "btn btn-primary" %>
  <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-danger" %>
<% end %>
